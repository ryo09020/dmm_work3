<div class="container">
  <div class="row">
    <div class="col-sm-6 col-md-8 m-3">
      <h2>User information</h2>
      
      <% if @user.errors.any? %>
      <%= @user.errors.count %>errors prohibited this obj from being saved:
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      <% end %>
      
      <%= form_with model: @user do |f| %>
      <div class=field>
        <label for="inputName">Name</label></br>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
      </div>
      <div class=field>
        <label for="inputImage">Image</label></br>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
      </div>
      <div class=field>
        <%= f.label :introduction %><br/>
        <%= f.text_field :introduction, placeholder: "自己紹介" %>
      </div>
      <div class="action">
        <%= f.submit "Update User",class:"btn btn-secondary m-1"%>
      </div>
      <% end %>
    </div>
  </div>

</div>



